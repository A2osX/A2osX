#!/BIN/SHELL
ECHO \fARG COUNT = $# ARGS=$0 $*
PAUSE
SET -X
ECHO PID=$$
SET -X
IF [ -F IFTEST ]
  ECHO FILE IFTEST EXISTS
  DATE
ELSE
  ECHO FALSE
  TIME
FI

IF ![ -E NOTHING ]
  ECHO FILE/DIR NOTHING DOES NOT EXIST
  ELSE
  ECHO FALSE
FI

IF [ -D SYS ]
  ECHO DIRECTORY SYS EXISTS
  ELSE
  ECHO FALSE
FI

PAUSE

READ -P "ENTER A PASSWORD : " -S VAR
ECHO "YOU TYPED : ${VAR}"
SET

ECHO NUMERIC TEST...
PAUSE

IF [ 23 -GT 45 ]
  ECHO NUMERIC TEST OK
ELSE
  ECHO NUMERIC TEST KO
FI

ECHO END OF TEST
